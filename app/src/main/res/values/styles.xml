<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/state_selector_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StrangeButtonStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/state_selector_strange_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonStyleScrollable">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/state_selector_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="ButtonNumbersStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/state_selector_number_button</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ButtonSolveStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/state_selector_solve_button</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TopButton">
        <item name="android:background">@drawable/state_selector_top_button</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    
    <style name="ExpandableButtonStyle">
        <item name="android:layout_margin">3dp</item>
        <item name="android:background">@drawable/state_selector_expandable_button</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ExpandableLinearLayoutStyle">
        <item name="android:background">@drawable/shadow_linearlayout</item>
    </style>

    <style name="LayoutStyles">
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:background">@color/colorBlack</item>
    </style>

</resources>
